{
    "name": "rednose-base",
    "shifter": {
        "lint": false
    },
    "builds": {
        "rednose-base": {
            "exec": [
                "yogi loader --json js/rednose-loader.json --tests false -js js/rednose-loader.js --yes --mix --start ../",
                "recess --compile ./less/rednose-base.less > ./css/rednose-base.css"
            ],
            "jsfiles": [
                "rednose-loader.js",
                "gallery.js"
            ],
            "cssfiles": [
                "rednose-base.css"
            ],
            "copy" : [
                [ "./img", "./img"],
                [ "./img", "./../rednose-ui/img"]
            ]
        }
    }
}
